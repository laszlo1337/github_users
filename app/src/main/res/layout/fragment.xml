<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242">


    <TextView
        android:id="@+id/description_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:text="Description: \n this code doesn't do shit. it is uterly useless piece of crap. don't use it. ever."
        android:textSize="24dp"
        android:minHeight="300dp"
        android:maxHeight="400dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/fork"
        android:layout_below="@+id/description_textview"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:tint="#BDBDBD"
        android:layout_marginLeft="200dp"
        app:srcCompat="@drawable/code_fork" />

    <TextView
        android:id="@+id/forks_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_textview"
        android:textSize="24dp"
        android:text="3"
        android:layout_toEndOf="@+id/fork" />

    <TextView
        android:id="@+id/watchers_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_textview"
        android:textSize="24dp"
        android:text="3"
        android:layout_marginEnd="61dp"
        android:layout_toEndOf="@+id/eye" />

    <TextView
        android:id="@+id/problems_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_textview"
        android:textSize="24dp"
        android:text="3"
        android:layout_toEndOf="@+id/problem" />

    <ImageView
        android:id="@+id/problem"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="280dp"
        android:layout_below="@+id/description_textview"
        android:tint="#BDBDBD"
        app:srcCompat="@drawable/ic_error_black_36dp" />

    <ImageView
        android:id="@+id/eye"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/description_textview"
        android:tint="#BDBDBD"
        app:srcCompat="@drawable/eye"
        android:layout_marginLeft="360dp"
        />

    <TextView
        android:text="ssh:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="italic"
        android:layout_below="@+id/fork"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:id="@+id/ssh_textview" />

    <TextView
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="24dp"
        android:textStyle="italic"
        android:text="https://api.github.com/users/mojombo/received_events"
        android:layout_below="@+id/ssh_textview"
        android:layout_centerHorizontal="true"
        android:id="@+id/ssh_link" />

</RelativeLayout>
